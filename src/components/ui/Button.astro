---
const {text, customClass} = Astro.props;

interface Props {
	text: string
	customClass?: string
}
---

<button 
	type="button" 
	class={`${customClass} text-turquoise font-fira text-sm border border-solid border-turquoise px-4 py-2 hover:scale-[1.1] transition duration-[0.3s] ease-in-out hover:text-white`}>
	{text}	
</button>
